{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "outDir": "./dist",
    "types": ["vite/client","swiper"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
